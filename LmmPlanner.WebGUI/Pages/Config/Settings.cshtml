@page
@model SettingsModel

@{
    ViewData["Title"] = "Einstellungen";
}
<h1>@ViewData["Title"]</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Aktion</th>
            <th>Name</th>
            <th>Wert</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var setting in Model.AllSettings)
        {
            <tr>
                <td>
                    <a asp-page="./Edit" asp-route-id="@setting.Id" class="btn btn-primary">
                        <i class="bi bi-pencil" aria-hidden="true"></i>
                    </a>
                </td>
                <td>@setting.Name</td>
                <td>@setting.Value</td>
            </tr>
        }
    </tbody>
</table>