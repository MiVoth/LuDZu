@model LmmPlanner.Data.Entities.AssignmentOverview
@{
    @* ViewData["Title"] = "Hallo"; *@
}

@* <h1>Ãœbersicht @ViewData["Title"]</h1>
    <hr> *@
<table class="table table-hover table-bordered text-center">
    <thead>
        <tr>
            <th>Verk.</th>
            @foreach (var meeting in Model.Meetings)
            {
                var dateString = meeting.Date.ToString("yyyy-MM-dd");
                <th>
                    <a asp-page="/Schedule" asp-route-date="@dateString">
                        @meeting.Date.ToString("dd.MM.yy")
                    </a>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>@item.Name</td>
                @foreach (var meeting in Model.Meetings)
                {
                    if (meeting.Schedules.Any(d => d.PersonId == item.Id))
                    {
                        <td class="text-success">
                            @foreach (var sched in meeting.Schedules.Where(d => d.PersonId == item.Id))
                            {
                                <div>@sched.PartTypeName</div>
                            }
                        </td>
                    }
                    else
                    {
                        <td>&nbsp;</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
